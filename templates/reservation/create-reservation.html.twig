{% extends 'base.html.twig' %}

{% block body %}
{% block reservation %}
    <section id="book-a-table" class="book-a-table">
        <div class="container" data-aos="fade-up">

            <div class="section-title">
                <h2>Confirm Reservation</h2>
            <p>This reservation will cost you {{ res.total }} DT</p>
            </div>

            <div class="form-row">
                <div class="text-center">
                    <a href="{{ path('confirm',{'id':res.id }) }}">Confirm</a>
                </div>&nbsp;&nbsp;
                <div class="text-center">
                    <a href="{{ path('reject',{'id':res.id }) }}">Cancel</a>
                </div>
            </div>

        </div>
    </section>


{% endblock %}
{% endblock %}