{% extends 'base.html.twig' %}

{% block body %}
    {% block reservation %}
        <section id="book-a-table" class="book-a-table">
            <div class="container" data-aos="fade-up">

                <div class="section-title">
                    <h2>Reservation</h2>

                </div>

{#                {{ form_start(registrationForm,{'method':'post','action':path('app_register')}) }}#}

{#                <form class="php-email-form"#}
{#                      data-aos="fade-up" >#}
                    {{ form_start(form,{'method':'post','action':path('book-hotel',{'idhotel':details.id})}) }}
                    {{ form_errors(form) }}
                    <div class="form-row">
                        <div class="col-lg-4 col-md-6 form-group {% if not form.startDate.vars.valid %}has-error{% endif %}">
                            <label class="form-label">Start Date</label>

                            {{ form_widget(form.startDate,{'attr':{'class':'form-control','style':'background:#fff;color:black;'}}) }}
                        </div>
                        <div class="col-lg-4 col-md-6 form-group">
                            <label class="form-label">End Date</label>
                            {{ form_widget(form.endDate,{'attr':{'class':'form-control','style':'background:#fff;color:black;'}}) }}
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-lg-4 col-md-6 form-group">
                            <label class="form-label">Number of nights</label>
                            {{ form_widget(form.numberOfNights,{'attr':{'class':'form-control','style':'background:#fff;color:black;'}}) }}
                        </div>
                        <div class="col-lg-4 col-md-6 form-group">
                            <label class="form-label">Rooms Number</label>
                            {{ form_widget(form.numberOfrooms,{'attr':{'class':'form-control','style':'background:#fff;color:black;'}}) }}
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-lg-4 col-md-6 form-group">
                            <label class="form-label">Number of adults</label>
                            {{ form_widget(form.numberOfAdults,{'attr':{'class':'form-control','style':'background:#fff;color:black;'}}) }}
                        </div>
                        <div class="col-lg-4 col-md-6 form-group">
                            <label class="form-label">Number of childs</label>
                            {{ form_widget(form.numberOfChilds,{'attr':{'class':'form-control','style':'background:#fff;color:black;'}}) }}
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-lg-4 col-md-6 form-group">
                            {{ form_widget(form.roomType,{'attr':{'class':'form-control','style':'background:#fff;color:black;'}}) }}
                        </div>

                    </div>

                    <div class="form-row">
                        <div class="text-center">
                          {{ form_widget(form.Book) }}
                        </div>&nbsp;&nbsp;
                    </div>
{#                </form>#}
                {{ form_end(form) }}
            </div>
        </section>

    {% endblock %}
{% endblock %}
